######################################## LOG4J ########################################
log4j.additivity.com.commsoft.epay.log=false
log4j.additivity.com.commsoft.epay.err=false
log4j.additivity.com.commsoft.epay.esb=false
# normal log
log4j.logger.com.commsoft.epay.log=DEBUG, fileLog
#ConsoleAppender
#log4j.appender.stdoutLog=org.apache.log4j.DailyRollingFileAppender
#log4j.appender.stdoutLog.layout=org.apache.log4j.PatternLayout
#log4j.appender.stdoutLog.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] -%m%n

log4j.appender.fileLog=org.apache.log4j.DailyRollingFileAppender
log4j.appender.fileLog.append=true
log4j.appender.fileLog.File=/opt/eagent/wh_portal/log/pc.log
log4j.appender.fileLog.layout=org.apache.log4j.PatternLayout
log4j.appender.fileLog.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] -%m%n
log4j.appender.fileLog.DatePattern='.'yyyyMMdd

# error log
log4j.logger.com.commsoft.epay.err=ERROR, fileErr

#log4j.appender.stdoutErr=org.apache.log4j.DailyRollingFileAppender
#log4j.appender.stdoutErr.layout=org.apache.log4j.PatternLayout
#log4j.appender.stdoutErr.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] -%m%n

log4j.appender.fileErr=org.apache.log4j.DailyRollingFileAppender
log4j.appender.fileErr.append=true
log4j.appender.fileErr.File=/opt/eagent/wh_portal/log/pc.err
log4j.appender.fileErr.layout=org.apache.log4j.PatternLayout
log4j.appender.fileErr.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] -%m%n
log4j.appender.fileErr.DatePattern='.'yyyyMMdd

# esb log
log4j.logger.com.commsoft.epay.esb=ERROR, fileEsb

#log4j.appender.stdoutEsb=org.apache.log4j.DailyRollingFileAppender
#log4j.appender.stdoutEsb.layout=org.apache.log4j.PatternLayout
#log4j.appender.stdoutEsb.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] -%m%n

log4j.appender.fileEsb=org.apache.log4j.DailyRollingFileAppender
log4j.appender.fileEsb.append=true
log4j.appender.fileEsb.File=/opt/eagent/wh_portal/log/esb.log
log4j.appender.fileEsb.layout=org.apache.log4j.PatternLayout
log4j.appender.fileEsb.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] -%m%n
log4j.appender.fileEsb.DatePattern='.'yyyyMMdd
